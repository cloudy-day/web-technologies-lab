body {
    font-family: Arial, sans-serif;
    margin: 0;
    background: rgb(2,0,36);
    background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(90,167,200,0.9766106271610207) 42%, rgba(0,212,255,1) 100%);
    height: 90vh;
}

header {
    
    color: #fff;
    padding: 10px;
    height: 90vh;

    h1 {
        margin: 0;
        text-align: center;
        text-transform: uppercase;
        font-weight: bold;
        padding: 4px auto;
    }
}

.container {
    display: flex;
    flex-direction: row;
}

.main-content {
    flex: 2;
    padding: 20px;
}

.sidebar {
    flex: 1;
    background: rgb(2,0,36);
    background: linear-gradient(90deg, rgba(0,212,255,1) 0%, rgba(90,167,200,0.9766106271610207) 42%, rgba(2,0,36,1) 100%);
    padding: 20px;
}



footer {
    background: rgb(2,0,36);
    background: linear-gradient(90deg, rgba(0,212,255,1) 0%, rgba(90,167,200,0.9766106271610207) 42%, rgba(2,0,36,1) 100%);
    color: #fff;
    padding: 10px;
    text-align: center;
    font-size: 14px;
}

a {
    color: #fff;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}


.widget {
    background-color: #f5f5f5;
    padding: 10px;
    margin-bottom: 20px;

    h3 {
        font-size: 20px;
        font-weight: bold;
        margin-top: 0;
    }

    p {
        font-size: 16px;
        line-height: 1.5;
        margin-bottom: 10px;
    }

}


